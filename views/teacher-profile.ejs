<%- include('includes/header') %> <%- include('includes/flash') %>
<div class="container py-md-3">
  <div class="row align-items-center">
    <div class="container">
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 shadow">
          <div class="d-flex justify-content-between container">
            <div class="container" style="margin-top: 1rem">
              <div class="text-center">
                <picture>
                  <img class="shadow homeProfilePic" src="/images/<%=profileUser.regNumber%>.jpg" alt="" />
                </picture>
                <h2 class="about-h2 text-uppercase boldFont nameStyle btmMarginZero"><%= profileUser.username %></h2>
                <% if (isVisitorsProfile) { %>
                <p class="bolderFont">
                  <a href="/teacher/profile/<%= profileUser.regNumber %>/edit" class="text-primary mr-2" data-toggle="tooltip" data-placement="top" title="Update Profile & Password"><i class="fas fa-edit"></i> Update Profile</a>
                </p>
                <% } %>
              </div>
            </div>
          </div>

          <div class="container mb-4 shadow profileDataContainer">
            <p><strong>Name : </strong><%= profileUser.username %></p>
            <p><strong>Address : </strong><%= profileUser.address %></p>
            <p><strong>Phone Number : </strong><%= profileUser.phone %></p>
            <p><strong>Email-id : </strong><%= profileUser.email %></p>
            <p><strong>Experiences : </strong><%= profileUser.experiences %></p>
            <p><strong>Role : </strong><%= profileUser.role %></p>
            <% if (isVisitorsProfile) { %> <% } %>
          </div>
        </div>
        <div class="col-md-1"></div>
      </div>
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 shadow mobileResponsiveDesign">
          <div class="container">
            <div class="list-group">
              <hr />
              <% if (isVisitorsProfile) { %>
              <h2 class="text-center bold-font">Your All Posts</h2>
              <% }else{ %>
              <h2 class="text-center"><strong><%= profileUser.username %></strong> Sir's All Posts</h2>
              <% } %>
              <hr />
              <%if(!posts.length){%>
              <div class="btn btn-block btn-info text-white">
                <h3 class="text-center"><i>There is no post till now</i></h3>
              </div>
              <%}%> <%- include('includes/posts') %>
            </div>
          </div>
        </div>
        <div class="col-md-1"></div>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
