<a class="list-group-item list-group-item-action" data-toggle="collapse" href="#collapse<%= player.regNumber %>" role="button" aria-expanded="false" aria-controls="collapseExample">
  <img class="avatar-tiny" src="/images/<%=player.regNumber%>.jpg" />
  <strong class="text-uppercase"><%= player.username %> </strong>
</a>
<div class="collapse" id="collapse<%= player.regNumber %>">
  <div class="card card-body">
    <div class="container">
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 shadow">
          <div class="d-flex justify-content-between container">
            <h2 class="text-center"><img class="avatar-student" src="/images/<%=player.regNumber%>.jpg" /> <span class="text-uppercase"><%= player.username %></span></h2>
          </div>

          <div class="container mb-4">
            <p><strong>Name : </strong><%= player.username %></p>
            <p><strong>Date Of Birth : </strong><%= player.dob %></p>
            <p><strong>Batting Style : </strong><%= player.battingStyle %></p>
            <p><strong>Bowling Style : </strong><%= player.bowlingStyle %></p>
          </div>
        </div>

        <div class="col-md-1"></div>
      </div>
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 shadow">
          <h3 class="text-center mb-4">Total Match Played - <strong><%=player.statistics.matches %></strong></h3>
          <div class="row">
            <div class="col-6 col-md-6 shadow">
              <div class="text-center">
                <h5 class="statisticsH5">Batting Statistics</h5>
              </div>

              <p><strong>Innings : </strong><%=player.statistics.batting.innings %></p>
              <p><strong>Runs : </strong><%=player.statistics.batting.runs %></p>
              <p><strong>Balls : </strong><%=player.statistics.batting.balls %></p>
              <p><strong>Hight Run : </strong><%=player.statistics.batting.hightRuns %></p>
            </div>
            <div class="col-6 col-md-6 shadow">
              <div class="text-center">
                <h5 class="statisticsH5">Bowling Statistics</h5>
              </div>

              <p><strong>Innings : </strong><%=player.statistics.bowling.innings %></p>
              <p><strong>Given Runs : </strong><%=player.statistics.bowling.runs %></p>
              <p><strong>Overs : </strong><%=player.statistics.bowling.overs %></p>
              <p><strong>Wickets : </strong><%=player.statistics.bowling.wickets %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>
</div>
